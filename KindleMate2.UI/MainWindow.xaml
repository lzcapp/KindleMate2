<Window x:Class="KindleMate2.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" DockPanel.Dock="Top">
            <MenuItem Header="MenuItem"/>
            <MenuItem Header="MenuItem"/>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>

            <DockPanel>
                <Grid DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <ComboBox SelectedIndex="0" >
                        <ComboBoxItem Content="{StaticResource SelectAll}"/>
                    </ComboBox>
                    <ComboBox Grid.Column="1" IsEditable="True"/>
                    <Image Grid.Column="2"/>
                </Grid>
                <TabControl DockPanel.Dock="Bottom" TabStripPlacement="Bottom">
                    <TabItem Header="TabItem">
                        <TreeView x:Name="BooksTreeView"/>
                    </TabItem>
                    <TabItem Header="TabItem">
                        <TreeView/>
                    </TabItem>
                </TabControl>
            </DockPanel>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <DockPanel>
                    <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Height="199"/>
                </DockPanel>
                <Grid Grid.Row="1" DataContext="">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                </Grid>
            </Grid>
        </Grid>
        <StatusBar Grid.Row="2" DockPanel.Dock="Bottom">
            <StatusBarItem Content="StatusBarItem" VerticalAlignment="Center"/>
        </StatusBar>
    </Grid>
</Window>
