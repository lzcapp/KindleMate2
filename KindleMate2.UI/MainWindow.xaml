<Window x:Class="KindleMate2.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KindleMate2.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="MenuItem"/>
            <MenuItem Header="MenuItem"/>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="StatusBarItem" VerticalAlignment="Center"/>
        </StatusBar>
        <DockPanel>
            <DockPanel DockPanel.Dock="Left">
                <DockPanel DockPanel.Dock="Top" LastChildFill="False">
                    <ContentControl Content="ContentControl" DockPanel.Dock="Left"/>
                    <Image DockPanel.Dock="Right"/>
                    <ComboBox Width="100"/>
                </DockPanel>
                <TabControl DockPanel.Dock="Bottom">
                    <TabItem Header="TabItem">
                        <Grid Background="#FFE5E5E5" Height="370">
                            <TreeView/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="TabItem">
                        <Grid Background="#FFE5E5E5">
                            <TreeView/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </DockPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,-261,0"/>
                <Grid Margin="0,116,-522,-280" Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                </Grid>
            </Grid>
        </DockPanel>
    </DockPanel>
</Window>
